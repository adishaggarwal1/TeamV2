@model IEnumerable<ConceptArchitect.BookManagement.Author>

<section id="authortoprow">
    @*<div >*@
    <img src="~/images/AuthorIndexImg.webp" width="100%">
    @*</div>*@
</section>

<section>
    <a asp-action="Add" class='btn-secondary btn btn-sm'>Add New</a>

    <h2 style="text-align:center">RECOMMENDED AUTHORS</h2>

    @*<div class="row">*@
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-0 pb-0 pt-2">

        @foreach (var author in Model)
        {
            <div class='col col-md-3'>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@author.Photo" alt="Card image cap">
                    <div class="card card-block card-1">
                        <h5 class="card-title" style="text-align:center">@author.Name</h5>
                        <p class="card-text" style="text-align:center">Author Biography</p>

                        <a asp-action="details" asp-route-id="@author.Id" class="btn  btn-primary">DETAILS</a>
                        <a asp-action="delete" asp-route-id="@author.Id" class="btn  btn-primary" onclick="return confirm('⚠️Are you sure you want to delete this item?')">DELETE</a>
                        <a asp-action="edit" asp-route-id="@author.Id" class="btn  btn-primary ">EDIT</a>

                    </div>
                </div>
            </div>
        }
    </div>

</section>