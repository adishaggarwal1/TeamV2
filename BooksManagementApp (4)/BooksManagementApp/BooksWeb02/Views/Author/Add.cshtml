@using ConceptArchitect.BookManagement
@model Author

<h2>Add New Author</h2>


<form asp-action="Add" method="POST">
    
    <label asp-for="@Model.Id" class='form-label'>Id</label>
    <input type='text' name="Id" value="@Model.Id" class='form-control' />

    <label asp-for="@Model.Name" class='form-label'>Name</label>
    <input type='text' name="Name" value="@Model.Name" class='form-control' />

    <label asp-for="@Model.BirthDate" class='form-label'>Birth Date</label>
    <input type='text' name="BirthDate" value="@Model.BirthDate" class='form-control' />


    <label asp-for="@Model.Biography" class='form-label'>Biography</label>
    <input type='text' name="biography" value="@Model.Biography" class='form-control' />

     <label asp-for="@Model.Email" class='form-label'>Email</label>
     <input type='text' name="email" value="@Model.Email" class='form-control' />

     <label asp-for="@Model.Photo" class='form-label'>Photo</label>
     <input type='text' name="photo" value="@Model.Photo" class='form-control' />

     


    <div>
        
        <input type="submit" value="Add Author" class='btn btn-primary form-control'/>
    </div>
</form>
